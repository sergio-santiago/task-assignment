{% extends 'layout.html.twig' %}

{% block title %}List users{% endblock %}

{% block main %}
    <div class="container">
        <div class="col-md-12">
            <div class="page-header">
                <h2>Users</h2>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Username</th>
                        <th>First name</th>
                        <th>Last name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Created</th>
                        <th>Updated</th>
                        <th class="text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.username }}</td>
                            <td>{{ user.firstName }}</td>
                            <td>{{ user.lastName }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                {% if user.role == 'ROLE_ADMIN' %}
                                    <strong>Admin</strong>
                                {% elseif user.role == 'ROLE_USER' %}
                                    <strong>User</strong>
                                {% endif %}
                            </td>
                            <td>{{ user.createdAt|date('d-m-Y H:i') }}</td>
                            <td>{{ user.updatedAt|date('d-m-Y H:i') }}</td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a href="#" class="btn btn-sm btn-info custom-action-button" title="view">
                                        <i class="fa fa-info"></i>
                                    </a>
                                    <a href="#" class="btn btn-sm btn-primary custom-action-button" title="edit">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                    <a href="#" class="btn btn-sm btn-danger custom-action-button" title="delete">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
