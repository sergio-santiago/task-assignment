{% extends 'layout.html.twig' %}

{% form_theme form 'overwriting_default_templates/custom_form_errors.html.twig' %}

{% block title %}{% trans %}New task{% endtrans %}{% endblock %}

{% block main %}
    <div class="container">
        <div class="col-md-12">
            <div class="row well">
                <div class="page-header custom-form-page-header">
                    <h2>{% trans %}New task{% endtrans %}</h2>
                </div>

                {{ form_start(form, { 'attr': { 'novalidate': 'novalidate', 'role': 'form' } }) }}

                <div class="form-group">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title, { 'attr': { 'class': 'form-control', 'placeholder': 'Task title' } }) }}
                    <span class="text-danger">{{ form_errors(form.title) }}</span>
                </div>

                <div class="form-group">
                    {{ form_label(form.user) }}
                    {{ form_widget(form.user, { 'attr': { 'class': 'form-control' } }) }}
                    <span class="text-danger">{{ form_errors(form.user) }}</span>
                </div>

                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, { 'attr': { 'class': 'form-control', 'placeholder': 'Task description', 'rows': '20' } }) }}
                    <span class="text-danger">{{ form_errors(form.description) }}</span>
                </div>

                <p class="custom-create-edit-button">
                    {{ form_widget(form.save, {'label' : 'Create task', 'attr': { 'class': 'btn btn-success btn-block btn-lg' } }) }}
                </p>

                {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endblock %}
